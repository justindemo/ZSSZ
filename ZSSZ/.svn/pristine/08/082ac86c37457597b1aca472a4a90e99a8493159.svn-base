<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grayground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_report_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_report_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_review_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_review_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_send_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_send_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_deal_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_deal_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_post_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />

                <ImageView
                    android:id="@+id/iv_post_statu1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/iv_uncom_nor" />

                <ImageView
                    android:id="@+id/iv_check_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_uncom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/reprote"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_report_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"

                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/review"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_review_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"

                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/send"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_send_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/deal"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_deal_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/post"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_post_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"

                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/check"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_check_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/graybackground" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grayground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/process_tasknumer"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_report_tasknuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20171123"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graybackground"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/predeal_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/process_redeal"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dealing_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/process_dealing"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dealed_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/process_dealed"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graybackground"/>

    <RelativeLayout
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_report_name_title"
            android:text="上报人："
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_report_name"
            android:text="中国"
            android:textSize="17sp"
            android:layout_toRightOf="@id/tv_report_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_review_name_title"
            android:text="审核人："
            android:textSize="19sp"
            android:layout_toLeftOf="@+id/tv_review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_review_name"
            android:text="sdad"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_deal_name_title"
            android:text="处置人："
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_deal_name"
            android:text="中国"
            android:textSize="17sp"
            android:layout_toRightOf="@id/tv_deal_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_check_name_title"
            android:text="验收人："
            android:textSize="19sp"
            android:layout_toLeftOf="@+id/tv_check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_check_name"
            android:text="sdad"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>
</ScrollView>