<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/tv_check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:text="养护作业"
            android:textColor="@color/cc_red"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_check_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_name"
            android:layout_marginTop="6dp"
            android:text="上报人员："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_name"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_reporter_title"
            android:text="张谋面"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reporter_title"
            android:layout_marginTop="6dp"
            android:text="@string/report_dealgrade"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_diseasename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reporter_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_name_title"
            android:text="一类病害"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_grade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_name_title"
            android:layout_marginTop="6dp"
            android:text="@string/report_dealcategory"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_name_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_grade_title"
            android:text="违章施工"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/tv_check_dealtype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_grade_title"
            android:layout_marginTop="6dp"
            android:text="@string/report_facategory"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_dealtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_grade"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_dealtype_title"
            android:text="违章施工"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_fatype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_dealtype"
            android:layout_marginTop="6dp"
            android:text="@string/report_faname"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_fatype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_dealtype"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_fatype_title"
            android:text="步道"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_pbtype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_fatype"
            android:layout_marginTop="6dp"
            android:text="@string/report_pbtype"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_pbtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_fatype"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_grade_title"
            android:text="塌陷"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reporteplace_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_pbtype"
            android:layout_marginTop="6dp"
            android:text="@string/report_roadname"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reporteplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_pbtype"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_grade_title"
            android:text="西环路"
            android:maxLines="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_detail_faname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reporteplace"
            android:layout_marginTop="6dp"
            android:text="@string/report_facility"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_detail_faname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reporteplace"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_detail_faname_title"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reviewer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_detail_faname"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_reviewer"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reviewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_detail_faname"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_reviewer_title"
            android:text="张三三"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_dealer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reviewer"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_dealer"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_dealer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reviewer"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_dealer_title"
            android:text="王美丽"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reportetime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_dealer"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_reporttime"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reportetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_dealer"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_reportetime_title"
            android:text="2017年3月2日16:45:06"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reviewtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reportetime"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_reviewtime"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_reviewtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_reportetime"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_reviewtime_title"
            android:text="2017年3月2日16:47:06"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_requesttime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_road"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_requesttime"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_requesttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_road"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_requesttime_title"
            android:text="2017年3月2日19:47:06"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_resulttime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_requesttime"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_resultetime"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_resulttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_requesttime"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_check_resulttime_title"
            android:text="2017年3月2日16:47:06"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_loca_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_check_reviewtime"
            android:text="@string/problemlocation"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />


        <FrameLayout
            android:layout_marginTop="6dp"
            android:id="@+id/tv_check_problem_loca1"
            android:layout_below="@+id/tv_check_reviewtime"
            android:layout_toRightOf="@+id/tv_check_loca_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:background="@drawable/selector_tv_audio"
                android:id="@+id/tv_check_problem_audio"
                android:layout_width="120dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:drawableRight="@mipmap/play"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_check_problem_loca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp" />


        </FrameLayout>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_check_problem_loca1"
            android:id="@+id/tv_check_detail_diseasedestitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/cc_text_blank"
            android:text="@string/report_problemdes"/>

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/tv_check_detail_diseasedes"
            android:textSize="20sp"
            android:text=""
            android:layout_below="@+id/tv_check_problem_loca1"
            android:layout_toRightOf="@+id/tv_check_detail_diseasedestitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_check_decs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_detail_diseasedes"
            android:layout_marginTop="6dp"
            android:text="@string/check_detail_repair"
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_decs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_check_detail_diseasedes"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_decs_title"
            android:maxLines="2"
            android:text=""
            android:textSize="20sp" />




        <TextView
            android:id="@+id/tv_check_road_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_decs"
            android:layout_marginTop="6dp"
            android:text="详细位置："
            android:textColor="@color/cc_text_blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_check_road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_check_decs"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_check_road_title"
            android:background="@color/cc_supervise"
            android:gravity="center"
            android:padding="3dp"
            android:text="查看详细位置"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_check_detail_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/tv_check_resulttime"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上报前"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/graybackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="处置后"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_check_detail_title"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/graybackground" />
        <!--第一段-->
        <LinearLayout
            android:id="@+id/ll_check_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_check_detail_title"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_check_detail_report"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/graybackground" />

            <ImageView
                android:id="@+id/iv_check_detail_dealed"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_check_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_check_idea"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_check_pass"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_sendroad_tv"
                android:text="通过"
                android:textSize="18sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_check_back"
                android:padding="5dp"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_sendroad_back"
                android:text="驳回"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>