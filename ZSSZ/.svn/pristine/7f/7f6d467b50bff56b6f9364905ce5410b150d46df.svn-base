<?xml version="1.0" encoding="utf-8"?>
<com.xytsz.xytsz.ui.Swipelayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pass1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/cc_dark_fade"
            android:gravity="center"
            android:text="养护一段"
            android:textColor="#fff"
            android:textSize="17sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/cc_light_dark"/>

        <TextView
            android:id="@+id/tv_pass2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/cc_dark_fade"
            android:text="养护二段"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="17sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/cc_light_dark"/>

        <TextView
            android:id="@+id/tv_pass3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/cc_dark_fade"
            android:text="设备科"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/cc_orage_red"
            android:text="驳回"
            android:gravity="center"
            android:textColor="#fff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_road"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/iv_swipe_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <TextView
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:id="@+id/tv_detail"
            android:text="@string/review_tv_detail"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/cc_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_problem_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="@string/allreporter"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_problem_reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_problem_reporter_title"
            android:ellipsize="end"
            android:text="张王丽"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/tv_problem_loca_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_problem_reporter_title"
            android:ellipsize="end"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:text="@string/problemlocation"
            android:textSize="16sp" />


        <FrameLayout
            android:id="@+id/tv_problem_loca1"
            android:layout_below="@+id/tv_problem_reporter_title"
            android:layout_toRightOf="@+id/tv_problem_loca_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:background="@drawable/selector_tv_audio"
                android:id="@+id/tv_problem_audio"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:drawableRight="@mipmap/play"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_problem_loca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textSize="16sp" />


        </FrameLayout>



        <TextView
            android:id="@+id/tv_problem_reportertime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_problem_loca1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="@string/reportertime"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_problem_reportertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_problem_loca1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_problem_reportertime_title"
            android:ellipsize="end"
            android:text="2017/3/2 15:02"
            android:textSize="16sp" />
    </RelativeLayout>
</com.xytsz.xytsz.ui.Swipelayout>