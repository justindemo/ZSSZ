<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp">

        <TextView
            android:textSize="20sp"
            android:background="@drawable/shape_circle_gray"
            android:id="@+id/tv_report_time"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="2017-3-15 10:00" />

        <TextView
            android:id="@+id/tv_report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_report_time"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="上报"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_report_right"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_report_title"
            android:background="@mipmap/right_arrow" />
        <TextView
            android:textSize="20sp"
            android:background="@drawable/shape_circle_gray"
            android:id="@+id/tv_review_time"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_report_right"
            android:text="2017-3-15 10:00"
            />
        <TextView
            android:padding="3dp"
            android:id="@+id/tv_review_title"
            android:layout_toRightOf="@id/tv_review_time"
            android:text="审核"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="75dp"
            android:background="@mipmap/down_arrow"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/shape_circle_gray"
            android:id="@+id/tv_deal_time"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="2017-3-15 10:00" />

        <TextView
            android:id="@+id/tv_deal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_deal_time"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="处置"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_send_right"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_deal_title"
            android:background="@mipmap/lift_arrow" />
        <TextView
            android:textSize="20sp"
            android:background="@drawable/shape_circle_gray"
            android:id="@+id/tv_send_time"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_send_right"
            android:text="2017-3-15 10:00"
            />
        <TextView
            android:padding="3dp"
            android:id="@+id/tv_send_title"
            android:layout_toRightOf="@id/tv_send_time"
            android:text="派工"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="25dp"
            android:background="@mipmap/down_arrow"
            android:layout_width="40dp"
            android:layout_height="70dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:background="@drawable/shape_circle_gray"
            android:id="@+id/tv_post_time"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="2017-3-15 10:00" />

        <TextView
            android:id="@+id/tv_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_post_time"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="报验"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_post_right"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_post_title"
            android:background="@mipmap/right_arrow" />
        <TextView
            android:textSize="20sp"
            android:background="@drawable/shape_circle_gray"
            android:id="@+id/tv_check_time"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_post_right"
            />
        <TextView
            android:padding="3dp"
            android:id="@+id/tv_check_title"
            android:layout_toRightOf="@id/tv_check_time"
            android:text="验收"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="任务单号："
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_report_tasknuber"
            android:textSize="19sp"
            android:text="20171123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:text="处置前照片"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/predeal_photo"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>
        <View
            android:layout_marginLeft="6dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="19sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:text="处置中照片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView

                android:id="@+id/dealing_photo"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>
        <View
            android:layout_marginLeft="6dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:text="处置后照片"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dealed_photo"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="6dp"
       android:layout_marginRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_report_name_title"
            android:text="上报人："
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_report_name"
            android:text="中国"
            android:textSize="19sp"
            android:layout_toRightOf="@id/tv_report_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_review_name_title"
            android:text="审核人："
            android:textSize="19sp"
            android:layout_toLeftOf="@+id/tv_review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_review_name"
            android:text="sdad"
            android:textSize="19sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_deal_name_title"
            android:text="处置人："
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_deal_name"
            android:text="中国"
            android:textSize="19sp"
            android:layout_toRightOf="@id/tv_deal_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_check_name_title"
            android:text="验收人："
            android:textSize="19sp"
            android:layout_toLeftOf="@+id/tv_check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_check_name"
            android:text="sdad"
            android:textSize="19sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>
</ScrollView>