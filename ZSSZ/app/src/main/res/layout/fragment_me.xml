<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--本人头像-->
    <RelativeLayout
        android:id="@+id/rl_user_center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/cc_btn_bule">

        <ImageView
            android:id="@+id/iv_my_icon"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/my_icon" />

        <TextView
            android:id="@+id/tv_my_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_my_icon"
            android:layout_centerInParent="true"
            android:paddingTop="6dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="个人资料"
            android:textColor="@color/white" />
    </RelativeLayout>
    <!--基本信息-->
    <LinearLayout
        android:id="@+id/ll_my_information"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#E5E4CF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="基本信息:"
            android:textSize="18sp" />
        <!--信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="18sp" />

            <EditText
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:singleLine="true"
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_user_name"
                android:background="@null"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机:"
                android:textSize="18sp" />

            <EditText
                android:focusable="false"
                android:inputType="phone"
                android:id="@+id/et_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_user_phone"
                android:background="@null"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/tv_user_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门:"
                android:textSize="18sp" />

            <EditText
                android:focusable="false"
                android:id="@+id/et_user_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_user_department"
                android:background="@null"
                android:singleLine="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <!--处理病害-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/my_first"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:text="我已上报病害的条数："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_report_nume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/my_last"
        android:gravity="center_horizontal|clip_vertical"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:text="我已处置病害的条数："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_deal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>