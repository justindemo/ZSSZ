<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_send_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        >
        <TextView
            android:id="@+id/tv_sendroad_vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病害名称："
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_send_Vname"
            android:layout_toRightOf="@+id/tv_sendroad_vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一级病害"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/tv_send_Vname"
            android:id="@+id/tv_send_Pname"
            android:layout_toRightOf="@+id/tv_sendroad_Pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="张三三"
            android:textSize="16sp" />
        <TextView
            android:layout_below="@+id/tv_send_Vname"
            android:id="@+id/tv_sendroad_Pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="上报人员："
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/tv_send_Pname"
            android:id="@+id/tv_send_date"
            android:layout_toRightOf="@+id/tv_sendroad_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2017年3月8日11:09"
            android:textSize="16sp" />
        <TextView
            android:layout_below="@+id/tv_send_Pname"
            android:id="@+id/tv_sendroad_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="上报时间："
            android:textSize="16sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:layout_marginTop="3dp"
            android:text="派发"
            android:id="@+id/bt_send_send"
            android:background="@color/cc_orage"
            android:layout_below="@+id/bt_send_choice"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <com.xytsz.xytsz.ui.TimeChoiceButton
            android:id="@+id/bt_send_choice"
            android:text="要求时间"
            android:background="@color/cc_orage"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="40dp" />
    </RelativeLayout>

</LinearLayout>