<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_send_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
         />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_sendroad_vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病害名称："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send_Vname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sendroad_vname"
            android:text="一级病害"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send_Pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Vname"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_sendroad_Pname"
            android:text="张三三"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sendroad_Pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Vname"
            android:layout_marginTop="6dp"
            android:text="上报人员："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_send_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Pname"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_sendroad_date"
            android:text="2017年3月8日11:09"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sendroad_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_Pname"
            android:layout_marginTop="6dp"
            android:text="上报时间："
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_postroad_ischeck"
            android:text="已报验"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:textColor="@color/cc_white"
            android:background="@color/cc_orage_red"
            android:layout_width="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/tv_postroad_ischeck"
            android:id="@+id/bt_post_send"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/cc_btn_bule"
            android:text="报验"
            android:textColor="@color/cc_white"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>