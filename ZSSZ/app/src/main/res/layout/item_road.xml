<?xml version="1.0" encoding="utf-8"?>
<com.xytsz.xytsz.ui.Swipelayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#9e9e9e"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="通过"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#f00"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="驳回"
            android:textColor="#fff" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_road"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/iv_swipe_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_problem_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:ellipsize="end"
            android:text="病害名称:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/tv_problem_name_title"
            android:ellipsize="end"
            android:text="一级病害"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_problem_name_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:ellipsize="end"
            android:text="上报人:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_problem_name_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_problem_reporter_title"
            android:ellipsize="end"
            android:text="张王丽"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_reportertime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_problem_reporter_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_swipe_icon"
            android:ellipsize="end"
            android:text="上报时间:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_problem_reportertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_problem_reporter_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_problem_reportertime_title"
            android:ellipsize="end"
            android:text="2017/3/2 15:02"
            android:textSize="18sp" />
    </RelativeLayout>
</com.xytsz.xytsz.ui.Swipelayout>