<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/graybackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置前："
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_predeal_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_predeal_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_predeal_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/bt_uncheck_predeal"
                android:text="上报"
                android:textSize="23sp"
                android:background="@color/cc_blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置中："
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dealing_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealing_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealing_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/bt_uncheck_dealing"
                android:text="上报"
                android:layout_weight="1"
                android:textSize="23sp"
                android:background="@color/cc_blue"
                android:layout_width="0dp"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置后："
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dealed_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealed_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_dealed_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/iv_add"
                android:scaleType="fitXY" />



        </LinearLayout>

    </LinearLayout>
    <EditText
        android:id="@+id/et_repair_statu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:hint="维修备注："
        android:maxLines="2"
        android:singleLine="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_uncheck_dealed"
        android:text="报验"
        android:background="@color/cc_orage_red"
        android:textSize="23sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content" />

</LinearLayout>
