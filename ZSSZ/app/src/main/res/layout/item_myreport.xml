<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_reporte"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"/>

    <RelativeLayout
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_my_reporter_title"
            android:text="@string/allreporter"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_my_reporter"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_my_reporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_my_reporter"
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_my_pbname_title"
            android:text="@string/problemlocation"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <FrameLayout
            android:id="@+id/tv_my_pbname1"
            android:layout_below="@id/tv_my_reporter"
            android:layout_toRightOf="@id/tv_my_pbname_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:background="@drawable/selector_tv_audio"
                android:id="@+id/tv_my_problem_audio"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:drawableRight="@mipmap/play"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="6dp"
                android:text="nihao "
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/tv_my_pbname"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>



        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_my_pbname1"
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_my_report_time_title"
            android:text="@string/reportertime"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="2017-05-31 09:29:54"
            android:id="@+id/tv_my_report_time"
            android:layout_below="@id/tv_my_pbname1"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_my_report_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</LinearLayout>